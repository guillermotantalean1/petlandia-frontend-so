<div class="container mt-4">
    <h1 class="mb-4">Catálogo de Productos</h1>
    
    <div class="row">
        <% if (products && products.length > 0) { %>
            <% products.forEach(function(product) { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="<%= product.images?.[0] || 'https://via.placeholder.com/300' %>" class="card-img-top" alt="<%= product.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="card-text text-primary">$<%= typeof product.price === 'number' ? product.price.toFixed(2) : product.price %></p>
                            <p class="card-text"><%= product.description %></p>
                            <% if (product.stock > 0) { %>
                                <button class="btn btn-primary w-100" onclick="addToCart('<%= product._id %>')">
                                    Añadir al carrito
                                </button>
                            <% } else { %>
                                <button class="btn btn-secondary w-100" disabled>
                                    Sin stock
                                </button>
                            <% } %>
                        </div>
                        <div class="card-footer bg-white">
                            <small class="text-muted">Categoría: <%= product.category || 'General' %></small>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12 text-center">
                <div class="alert alert-info">
                    No hay productos disponibles en este momento.
                </div>
            </div>
        <% } %>
    </div>
</div>

<script src="/js/products.js"></script> 